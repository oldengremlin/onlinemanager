                    <!-- https://www.baeldung.com/keytool-intro -->
                    <keystore>${session.executionRootDirectory}/onlinemanager.key</keystore>
                    <alias>onlinemanager</alias>
                    <storepass>ukrhub</storepass>
                    <keypass>ukrhub</keypass>
                </configuration>
            </plugin>
            
