            <!--
            jarsigner -verify -verbose -certs onlinemanager-1.0-20250110.061433.jar
            jarsigner -verify -verbose -certs onlinemanager-1.0-20250110.061433-shaded.jar
            jarsigner -verify -verbose -certs onlinemanager-1.0-20250110.061433-spring-boot.jar
