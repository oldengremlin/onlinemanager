<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.ukr-com</groupId>
  <artifactId>onlinemanager</artifactId>
  <name>Ukrcom / DHCP / Online manager</name>
  <version>1.1.${buildNumber}</version>
  <scm>
    <connection>scm:git:git@github.com:oldengremlin/onlinemanager.git</connection>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <shadedClassifierName>all</shadedClassifierName>
              <outputFile>${project.build.directory}/${project.artifactId}-${project.version}-all.jar</outputFile>
              <transformers>
                <transformer>
                  <mainClass>${exec.mainClass}</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                    <exclude>META-INF/MANIFEST.MF</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.panteleyev</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>1.7.3</version>
        <executions>
          <execution>
            <id>jpackage-windows</id>
            <phase>package</phase>
            <goals>
              <goal>jpackage</goal>
            </goals>
            <configuration>
              <skip>${jpackage.skip.windows}</skip>
              <name>Onlinemanager</name>
              <appVersion>${project.version}</appVersion>
              <input>${project.build.directory}</input>
              <mainJar>${project.artifactId}-${project.version}-all.jar</mainJar>
              <mainClass>${exec.mainClass}</mainClass>
              <destination>${project.build.directory}/jpackage</destination>
              <winShortcut>true</winShortcut>
              <winMenu>true</winMenu>
              <winMenuGroup>NOC Tools</winMenuGroup>
              <icon>${project.basedir}/src/main/resources/onlinemanager.ico</icon>
            </configuration>
          </execution>
          <execution>
            <id>jpackage-deb</id>
            <phase>package</phase>
            <goals>
              <goal>jpackage</goal>
            </goals>
            <configuration>
              <skip>${jpackage.skip.deb}</skip>
              <name>onlinemanager</name>
              <vendor>Oleksandr Russkikh</vendor>
              <appVersion>${project.version}</appVersion>
              <input>${project.build.directory}</input>
              <mainJar>${project.artifactId}-${project.version}-all.jar</mainJar>
              <mainClass>${exec.mainClass}</mainClass>
              <destination>${project.build.directory}/jpackage</destination>
              <linuxShortcut>true</linuxShortcut>
              <linuxPackageName>onlinemanager</linuxPackageName>
              <additionalDependencies>
                <additionalDependency>--add-modules java.desktop</additionalDependency>
              </additionalDependencies>
              <linuxMenuGroup>Utilities</linuxMenuGroup>
              <linuxAppCategory>Utility</linuxAppCategory>
              <linuxPackageSection>utils</linuxPackageSection>
              <linuxDebMaintainer>olden@ukr-com.net</linuxDebMaintainer>
              <linuxPackageDeps>libasound2</linuxPackageDeps>
              <description>Radius online for JunOS Broadband Subscriber Management.
                                onlinemanager — Моніторинг активних DHCP-сесій на Juniper MX (radacct).</description>
              <resourceDir>src/main/resources</resourceDir>
              <icon>${project.basedir}/src/main/resources/onlinemanager.png</icon>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>buildnumber-maven-plugin</artifactId>
        <version>3.2.1</version>
        <executions>
          <execution>
            <phase>validate</phase>
            <goals>
              <goal>create</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <doCheck>false</doCheck>
          <doUpdate>false</doUpdate>
          <format>{0,number,00000}</format>
          <items>
            <item>buildNumber</item>
          </items>
          <persist>true</persist>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.release>21</maven.compiler.release>
    <exec.mainClass>net.ukrcom.onlinemanager.Onlinemanager</exec.mainClass>
    <jpackage.main.jar>${project.artifactId}-${project.version}.jar</jpackage.main.jar>
    <maven.compiler.source>1.8</maven.compiler.source>
    <jpackage.app.version>1.0</jpackage.app.version>
    <jpackage.skip.windows>${jpackage.skip}</jpackage.skip.windows>
    <jpackage.skip.rpm>${jpackage.skip}</jpackage.skip.rpm>
    <buildNumber>00095</buildNumber>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.build.timestamp.format>yyyyMMdd.HHmmss</maven.build.timestamp.format>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <packageClassName>${exec.mainClass}</packageClassName>
    <jpackage.app.name>Onlinemanager</jpackage.app.name>
    <jpackage.skip>true</jpackage.skip>
    <timestamp>${maven.build.timestamp}</timestamp>
    <jpackage.skip.deb>${jpackage.skip}</jpackage.skip.deb>
  </properties>
</project>
